/* 头部样式 */
.head{
  background-color: #00bdbd;
  width: 100%;
  height: 50rpx;
  position: fixed;/*位置固定在顶部*/
  top: 0;
  z-index: 9;/*优先显示*/
}
.headTitle{
  top: 50rpx;
  font-size: 35rpx;
  padding-left: 30rpx;
}




.table{
  margin-top: 100rpx;
  display: flex;/* 伸缩盒子 */
  background-color: #ffffff;
}

.left{
  width: 10%;
  font-size: 23rpx;
  display: flex;/* 伸缩盒子 */
  flex-direction: column;/*上下分布*/
}
.left .item{
  flex: 1;
  text-align: center;/*水平居中*/
  font-size: 20rpx;
  padding: 12rpx 0;
  border-bottom: 0.4rpx dashed rgb(235, 235, 235);/*下边框线 dashed 虚线*/
}
.left .item .time{
  font-size: 18rpx;
  color: #27c478;
}

.right{
  font-size: 24rpx;
  color: #ffff;
  flex: 1;
  display: flex;/* 伸缩盒子 */
  flex-direction: column;/*上下分布*/
}
/*表头行 星期天*/
.week{
  color: #000;
  width: 100%;
  height: 70rpx;
  display: flex;/* 使text 变成块元素*/
  border-bottom: 0.4rpx solid rgb(235, 235, 235);
}
.week text{
  flex: 1;
  text-align: center;/*水平居中*/
  margin: 5rpx 10rpx;/*左右边距使分行*/
  font-size: 24rpx;
}

.right .Ritem{
  flex: 1;
  padding: 1rpx 0;
  border-bottom: 0.4rpx dashed rgb(235, 235, 235);/*下边框线 dashed 虚线*/
  display: flex;/* 伸缩盒子 */
}
.right .Ritem .item2{
  width: 14.28%;
  background-color: aqua;
  border-radius: 8rpx;/* 边框圆角*/
}
.right .Ritem .item21{
  width: 14.28%;
}
.right .Ritem .item3{
  width: 14.28%;/* 1/7 */
  background-color: aquamarine;
  border-radius: 8rpx;/* 边框圆角*/
  text-align: center;/*文本显示多行 ？实现上下居中*/
  padding-top: 20rpx;
}



/*图标栏 标题*/
.serve .sTitle{
  line-height: 40rpx;/*使文本上下居中*/
  margin: 14rpx auto auto 20rpx ;/*上 右 下 左*/
}

/*图标宽度*/
.serve .sItem image{
  width: 50%;
}