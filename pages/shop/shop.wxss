/*轮播图盒子，公有样式app.wxss*/
.swiper_content{
  background-color: #02817A;
  margin-bottom: 106rpx;/*因轮播图下沉  故设外下边距*/
}


/*第一重子项*/
.shop{
  margin-bottom: 20rpx;/*外边距可以重叠*/
}
/*第二重子项*/
.shop .item {
  background-color: #ffffff;
  display: flex;/*水平分布*/
  width: 100%;
  border-bottom: 0.4rpx solid rgb(235, 235, 235);/*下边框线*/
}
.shop .item image{
  flex: 1;/*宽度占 1/11*/
  height: 60rpx;
  margin: 20rpx;
}
.shop .item .title{
  flex: 9;/*宽度占 9/11*/
  line-height: 100rpx;/*行高 使文字上下居中   60+40=100 */
  font-size: 34rpx;
}



/*服务图标栏 公有样式 */
/*外边距可以重叠*/
/*图标栏 标题*/
.serve .sTitle{
  margin: 16rpx auto auto 20rpx;/*上 右 下 左*/
  line-height: 50rpx;/*使文本上下居中*/
}
/*子项图标*/
.serve .sItem{
  position: relative;/*为tag提供相对位置*/
}
/*图标宽度*/
.serve .sItem image{
  width: 43%;
}
/*图标消息提示*/
.serve .sItem .tag{
  /*显示位置 图标右上角*/
  position: absolute;
  top: 10rpx;
  right: 38rpx;

  height: 24rpx;
  min-width: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #dd1a21;
  padding: auto;
  font-size: 18rpx;
  line-height: 24rpx;
  color: #dd1a21;
  text-align: center;
  background: #fff; 
  /*容器伸缩 根据tag内容多少而变化*/
  box-sizing: border-box; 
  white-space: nowrap;
}

